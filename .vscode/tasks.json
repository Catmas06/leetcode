{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-9 生成活动文件",
            "command": "/usr/bin/gcc-9",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${fileDirname}/*.c", //编译当前文件夹下所有.c文件
                "${file}", //仅编译当前文件
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out", //生成.out文件，方便过滤
                //"-static-libgcc", // 静态链接libgcc，加快执行速度，但浪费空间
                "-Wall", // 开启额外警告
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。",
        }
    ],
    "version": "2.0.0"
}